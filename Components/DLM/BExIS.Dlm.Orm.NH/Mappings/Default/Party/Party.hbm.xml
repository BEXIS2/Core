<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" assembly="BExIS.Dlm.Entities" namespace="BExIS.Dlm.Entities.Party">
  <class xmlns="urn:nhibernate-mapping-2.2" name="Party" table="Parties">
    <!-- Mapping BaseEntity properties -->

    <id name = "Id" type="Int64">
      <column name = "Id" />
      <generator class="native" />
    </id>

    <version name = "VersionNo" type="Int32">
      <column name = "VersionNo" />
    </version >

    <property name="Extra" type="System.Xml.XmlDocument, System.Xml, Version=4.0.0.0, Culture=neutral, PublicKeyToken=b77a5c561934e089">
      <column name = "Extra" not-null="false" sql-type="xml" />
    </property>

    <!-- Mapping DataTuple properties -->
    <property name="Name" type="String" >
      <column name="Name"  />
    </property>

    <property name="Alias" type="String" >
      <column name="Alias"  />
    </property>

    <property name="Description" type="String" >
      <column name="Description"  />
    </property>

    <property name="StartDate" type="DateTime" >
      <column name="StartDate"  />
    </property>

    <property name="EndDate" type="DateTime" >
      <column name="EndDate"  />
    </property>

    <many-to-one name="PartyType" class="BExIS.Dlm.Entities.Party.PartyType"  not-null="true" column="PartyTypeRef"   />

    <set name="CustomAttributeValues" table="PartyCustomAttributeValues" lazy="true" >
      <key column="PartyRef"/>
      <one-to-many class="PartyCustomAttributeValue"/>
    </set>

    <set name="History" table="PartyStatuses" lazy="true"   cascade="all" inverse="true">
      <key column="PartyRef"/>
      <one-to-many class="PartyStatus"/>
    </set>
   
  </class>
</hibernate-mapping>