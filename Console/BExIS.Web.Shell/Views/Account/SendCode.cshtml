@model BExIS.Web.Shell.Models.SendCodeModel
@{
    ViewBag.Title = "Senden";
}

<h2>@ViewBag.Title.</h2>

@using (Html.BeginForm("SendCode", "Account", new { ReturnUrl = Model.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    @Html.Hidden("RememberMe", @Model.RememberMe)
    <h4>Überprüfungscode senden</h4>
    <hr />
    <div class="row">
        <div class="col-md-8">
            Anbieter für zweistufige Authentifizierung auswählen:
            @Html.DropDownListFor(model => model.SelectedProvider, Model.Providers)
            <input type="submit" value="Absenden" class="btn btn-default" />
        </div>
    </div>
}