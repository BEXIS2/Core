@using Telerik.Web.Mvc.UI;
@using System.Data;
@using BExIS.Dlm.Entities.DataStructure;
@using BExIS.Modules.Dim.UI.Helpers;

@model BExIS.Modules.Dim.UI.Models.Export.SimpleDataStructureModel

@if (Model.Data != null)
{

<h3>@Model.Name (@Model.Id)</h3>

<table>
    <thead>
        <tr>
            @foreach (DataColumn dc in Model.Data.Columns)
            {
                <th> @dc.ColumnName </th>
            }
        </tr>
    </thead>

    @foreach (DataRow row in Model.Data.Rows)
    {
        <tr>
            @foreach (string item in row.ItemArray)
            {

                <td>
                    @item
                </td>
            }
        </tr>
    }

</table>

    
}


<style>
    /*----------------------------------------------------------
Color Overview

White    #000000    brigth
Gray 01  #f5f5f5
Gray 02  #ebebeb
Gray 03  #afb0b1
Gray 04  #009cdf    // new 323232 dark
Black    #ffffff
Yellow   #ffbb52
Orange   #ff9700
Red      #f24c24
Green 01  #388670 dark
Green 02  #72b1a0
Green 03  #bee1da
Green 04  #d2e8e3
