@model BExIS.Modules.Rpm.UI.Models.AttributePreviewStruct
@{ 
    string cssId = "attribute_" + Model.Id;
    string cssClass = Model.Id + " bx-rpm-attribute";
}

<div class="bx-rpm-attribute-item @cssClass" id="@cssId">
    <table>
        <tr class="hidden">
            <td id="Id">@Model.Id</td>
            <td id="Name">@Model.Name.ToLower()</td>
            <td id="Unit">@Model.Unit.Name.ToLower()</td>
            <td id="DataType">@Model.DataType.ToLower()</td>
        </tr>
        <tr>
            <td class="id">
                <div class="bx-rpm-label">Id</div>
                <div class="bx-rpm-text" title="@Model.Id">@Model.Id</div>
            </td>
            <td class="name">
                <div class="bx-rpm-label">Name</div>
                <div class="bx-rpm-text" title="@Model.Name">@Model.Name</div>
            </td>
            <td class="unit">
                <div class="bx-rpm-label">Unit</div>
                <div class="bx-rpm-text" title="@Model.Unit.Name">@Model.Unit.Description</div>
            </td>
            <td class="datatype">
                <div class="bx-rpm-label">Data Type</div>
                <div class="bx-rpm-text" title="@Model.DataType">@Model.DataType</div>
            </td>
            @*@if (Model.inUse)
            {
                <td class="bx-rpm-delete bx-disabled"><span id="deleteattribute" class="bx fa-trash-o" disabled="true"></span></td>
            }
            else
            {
                <td class="bx-rpm-delete" onclick="javascript:openAttrDelWindow(@Model.Id,'@Model.Name', 'dataattribure')"><span id="deleteattribute" class="bx fa-trash-o"></span></td>
            }*@
            <td class="bx-rpm-expand" title="Show Details"><span id="attributecollapse" class="bx bx-angle-double-down"></span></td>
            <td class="bx-rpm-select" title="Add Variable" onclick="javascript:addVariable(@Model.Id,'@Model.Name')"><span class="bx bx-next bx-button function small"></span></td>
        </tr>
        <tr class="">
            <td class="id"></td>
            <td class="name">
                <div class="bx-rpm-label hiddenelements" title="@Model.Description">@Model.Description</div>
            </td>
            <td class="unit">
                <div class="bx-rpm-label" title="@Model.Unit.Name">@Model.Unit.Name</div>
            </td>
            <td class="datatype">
                @if (!String.IsNullOrEmpty(Model.DisplayPattern))
                {
                    <div class="bx-rpm-label" title="@Model.DisplayPattern">@Model.DisplayPattern</div>
                }
            </td>
        </tr>
        <tr class="hidden hiddenelements">
            <td colspan="7" class="description">
                <div class="bx-rpm-label">Description</div>
                <div class="bx-rpm-text">
                    @Model.Description
                </div>
            </td>
        </tr>

        @if (Model.Constraints.Count > 0)
        {
            <tr class="hidden hiddenelements">
                <td colspan="7" class="constraints">
                    <div class="bx-rpm-label">Constraints</div>
                    <div class="bx-rpm-text">
                        <ul>
                            @foreach (KeyValuePair<long, string> c in Model.Constraints)
                            {
                                <li>@c.Value</li>
                            }
                        </ul>
                    </div>
                </td>
            </tr>
        }
    </table>
</div>