@using Telerik.Web.Mvc.UI
@using Vaiona.Web.Mvc.Modularity

@model BExIS.Modules.Sam.UI.Models.CreateGroupModel

@using (Ajax.BeginForm("Create", "Groups", new AjaxOptions { HttpMethod = "POST", UpdateTargetId = "content_createGroup", OnSuccess = "createGroup_onSuccess" }))
{
@Html.ValidationSummary(true)

<table class="bx-table-form">
    <tr>
        <td>
            @Html.LabelFor(m => m.Name)
        </td>
        <td>
            @Html.TextBoxFor(m => m.Name, new { @class = "t-input bx-input" })
            @Html.ValidationMessageFor(m => m.Name)
        </td>
    </tr>
    <tr>
        <td>
            @Html.LabelFor(m => m.Description)
        </td>
        <td>
            @Html.TextBoxFor(m => m.Description, new { @class = "t-input bx-input" })
            @Html.ValidationMessageFor(m => m.Description)
        </td>
    </tr>
</table>

<div class="bx-footer right">
    <button style="margin-right: 1px" type="submit" class="bx-button action">Save</button>
    <button style="margin-left: 1px" type="button" id="button_createGroup_cancel" class="bx-button action">Cancel</button>
</div>
}