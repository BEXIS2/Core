@using Telerik.Web.Mvc.UI
@using Vaiona.Web.Mvc.Modularity

@model BExIS.Modules.Sam.UI.Models.FileModel

@using (Ajax.BeginForm("UploadFile", "Files",
    new { id = "uploadFile" },
    new AjaxOptions { HttpMethod = "POST", OnComplete = "oncomplete", OnFailure= "onfailed", UpdateTargetId = "content_uploadFile" }, new { enctype = "multipart/form-data" } ))
{
@*@using (Html.BeginForm("UploadFile", "Files", new { area = "Sam" },
                                         FormMethod.Post, new { id = "uploadForm", enctype = "multipart/form-data" }))
    {*@
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    <table class="bx-table-form">
        @Html.HiddenFor(m => m.Path)
        @Html.HiddenFor(m => m.MimeType)
        @Html.HiddenFor(m => m.Name)
        <tr>
            <td>
                @Html.LabelFor(m => m.DisplayName)
            </td>
            <td>
                @Html.TextBoxFor(m => m.DisplayName, new { @class = "t-input bx-input" })
                @Html.ValidationMessageFor(m => m.DisplayName)
            </td>
        </tr>
        <tr>
            <td>
                @Html.LabelFor(m => m.Description)
            </td>
            <td>
                @Html.TextBoxFor(m => m.Description, new { @class = "t-input bx-input" })
             
            </td>
        </tr>
        <tr>
            <td>
                @Html.Label("File")
            </td>
            <td>
                <input name="fileToUpload" type="file">
            </td>
        </tr>
    </table>

    <div class="bx-footer right">
        <button style="margin-right: 1px" type="submit" class="bx-button action">Save</button>
        <button style="margin-left: 1px" type="button" id="button_uploadFile_cancel" class="bx-button action">Cancel</button>
    </div>
}

<script>
    function oncomplete(data)
    {
        debugger
        alert(data)
    }
    function onfailed(data) {
        debugger
        alert(data)
    }
</script>
