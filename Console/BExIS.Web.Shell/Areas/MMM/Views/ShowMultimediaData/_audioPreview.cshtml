@model string
@{
    string mimeType = MimeMapping.GetMimeMapping(Model);
    string path = @Url.Content("~/mmm/ShowMultimediaData/getFile/?path=" + Server.UrlEncode(Model));
    string stream = @Url.Content("~/mmm/ShowMultimediaData/getFileStreamResult/?path=" + Server.UrlEncode(Model));
}
<audio preload="metadata" typeof="@mimeType" controlslist="nodownload" controls>
    <source src="@stream">
    <source src="@path">
    Your browser does not support the audio tag.
</audio>