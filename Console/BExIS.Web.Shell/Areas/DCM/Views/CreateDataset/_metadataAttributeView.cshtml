            var data = {
                value: value,
                id: id,
                parentid: parentid,
                number: number,
                ParentModelNumber: ParentModelNumber
            };

            $.post('@Url.Action("DownMetadataAttributeUsage", "CreateDataset", new RouteValueDictionary { { "area", "DCM" } })', { id: id, parentid: parentid, number: number, ParentModelNumber: ParentModelNumber, ParentStepId: ParentStepID }, function (response) {

                var id = ParentStepID;
                $("#" + id).replaceWith(response);
            })

        }
    }

</script>
