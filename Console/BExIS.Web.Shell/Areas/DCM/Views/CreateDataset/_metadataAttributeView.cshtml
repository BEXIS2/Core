        //object value,  int id, int parentid,       string parentname,     int number, int parentModelNumber,                    int parentStepId)
        $.post('@Url.Action("ValidateMetadataAttributeUsage", "CreateDataset", new RouteValueDictionary { { "area", "DCM" } })', { value: e.value, id: id, parentid: parentid, parentname: parentname, number: number, parentModelNumber: ParentModelNumber, ParentStepId: ParentStepID }, function (response)
        {
            //alert(e.value);
            //alert(response);
            //var id = parentid;
