<link href="~/Areas/Dcm/Scripts/svelte/validation.css" rel="stylesheet">

@section scripts
{
    <script src="~/Areas/Dcm/Scripts/svelte/validation.js"></script>
}

@{
    long id = 0;
    long version = 0;

    if (ViewBag.id != null)
    {
        id = (long)ViewBag.id;
    }

    if (ViewBag.version != null)
    {
        version = (long)ViewBag.version;
    }

}

<div id="validation" dataset="@id" version="@version"> </div>